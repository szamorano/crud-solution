@if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSordOrder == SortOrderOptions.Ascending.ToString())
{
    <th>
        <a href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName&sortOrder=@nameof(SortOrderOptions.Descending)">@(ViewBag.DisplayName)</a>
        <i class="fa-solid fa-sort-up"></i>
    </th>
}
else if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSordOrder == SortOrderOptions.Descending.ToString())
{
    <th>
        <a href="~/persons/index?searchBy=@(ViewBag.CurrentSearchBy)&searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName&sortOrder=@nameof(SortOrderOptions.Ascending)">@(ViewBag.DisplayName)</a>
        <i class="fa-solid fa-sort-down"></i>
    </th>
}
else
{
    <th>
        <a href="~/persons/index?searchBy=@(ViewBag.CurrentSearchBy)&searchString=@ViewBag.CurrentSearchString&sortBy=@(ViewBag.ColumnName)&sortOrder=@nameof(SortOrderOptions.Ascending)">@(ViewBag.DisplayName)</a>
    </th>
}